<?xml version="1.0" encoding="UTF-8"?>

<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "mob.app.dev.map"
        version   = "1.0.0">

    <name>Week 8 - Maps</name>

    <description>
        A sample application that demonstrates google maps
    </description>

    <author href="worcester.ac.uk" email="c.blythe@worc.ac.uk">
        WBS Computing
    </author>

<!--    <preference name="phonegap-version" value="cli-7.0.1" />-->
	
    <preference name="permissions"                value="none"/>   
	
	<access origin="*"/>
    
   	<plugin name="cordova-plugin-whitelist" version="1" />
    
    <!--Android 6.0 or newer: Plugin to support runtime permissions--> 
    <plugin name="cordova-plugin-geolocation-android-activator" />
    
    <!--Plugin to support gathering of location data--> 
    <plugin name="cordova-plugin-geolocation"  />
    
    
    
</widget>
